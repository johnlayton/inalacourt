<style>
  .leaflet-container {
    background: black;
  }

  .leaflet-tile-pane {
    opacity: 0.65;
  }

  .flyover {
    background: #DDD;
    width: 10px;
    padding: 0;
  }

  #container.flyover-open #flyover {
    padding-left: 5px;
    width: 200px;
  }

  .flyover #flyover-content {
    width: 0;
  }

  #container.flyover-open #flyover-content {
    width: 100%;
  }

  #container .leaflet-right {
    margin-right: 10px;
  }

  #container.flyover-open .leaflet-right {
    margin-right: 205px;
  }
</style>
<div id="container" ng-controller="Tracking">
  <div id="flyover" class="flyover" style="position: relative; z-index: 5000; top: 0; right: 0; height: 100%;">
    <span id="flyover-toggle" style="cursor: pointer;" ng-click="toggleFlyover()">&lt;</span>
    <div id="flyover-content"></div>
  </div>
  <leaflet center="melbourne" defaults="defaults" layers="layers"></leaflet>
</div>

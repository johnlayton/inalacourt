  <body ng-controller="Main">

    <div class="container">
      <header class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <a href="/" class="navbar-brand">NAFC Aircraft Tracking</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li ng-class="{ active: activeTab == 'overview' }"><a ng-href="#!/overview">Overview</a></li>
          <li ng-class="{ active: activeTab == 'incident' }"><a ng-href="#!/incident">Incidents</a></li>
          <li ng-class="{ active: activeTab == 'victoria' }"><a ng-href="#!/victoria">Victoria</a></li>
          <li ng-class="{ active: activeTab == 'terrain'  }"><a ng-href="#!/terrain">Terrain</a></li>
        </ul>
      </header>
    </div>

    <div class="container content">
      <ng-view></ng-view>
    </div>

    <div class="container footer">
    </div>
  </body>
</html>